matr <- matrix(data = 3,nrow = 3,ncol = 4)
matr
matr[1,3] <- 4
matr[2,1] <- 1
matr[3,2] <- NA
matr[3,4] <- 1
matr
a <- c(1, 3, 4, 9, NA)
b <- c(5, 6, 7, 0, 2)
c <- c(9, 10, 13, 1, 20)
matr_sec <- cbind(a,b,c)
matr_third <- rbind(a,b,c)
matr_sec
matr_third
rown <- paste("row",1:5)
coln <- paste("col",1:5)
row.names(matr_sec) <- rown
colnames(matr_sec) <- coln[c(1:3)]
row.names(matr_third) <- rown[c(1:3)]
colnames(matr_third) <- coln
matr_sec
matr_third